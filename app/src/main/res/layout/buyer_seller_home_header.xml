<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/activity_background_color">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/black_bordered_white_rectangle_drawable"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/history"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/history"
            android:drawablePadding="7dp"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:text="History"
            android:textColor="@color/textColorPrimary"
            android:textSize="16sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/black" />

        <TextView
            android:id="@+id/my_circle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/my_circle"
            android:drawablePadding="7dp"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:text="My Circle"
            android:textColor="@color/textColorPrimary"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/analysis"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_analysis_black"
            android:drawablePadding="7dp"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:text="Analysis"
            android:textColor="@color/textColorPrimary"
            android:textSize="16sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/black" />

        <TextView
            android:id="@+id/pending_enquiries"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_bookmark_black"
            android:drawablePadding="7dp"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            android:text="Pending Enq."
            android:textColor="@color/textColorPrimary"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:text="Active Enquiries"
        android:textColor="@color/textColorPrimary"
        android:textSize="18sp"
        />

</LinearLayout>