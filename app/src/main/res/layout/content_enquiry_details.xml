                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/l10dp"
                        android:text="Govind K"
                        android:textColor="@color/divider" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/l10dp"
                        android:layout_marginTop="10dp"
                        android:text="Comments"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/comments"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/l10dp"
                        android:text="Some text will be here whatever buyer/seller want to right"
                        android:textColor="@color/divider" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/acc_rej_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="30dp">

                    <LinearLayout
                        android:id="@+id/btn_reject"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/w40dp"
                        android:layout_weight="1"
                        android:background="@drawable/red_border_box"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/lbl_reject"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_horizontal"
                            android:text="Reject"
                            android:textColor="@color/colorAccent"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_accept"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/w40dp"
                        android:layout_weight="1"
                        android:background="@color/teal"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/lbl_accept"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_horizontal"
                            android:text="Accept"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/revert_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:id="@+id/revert_enquiery"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/w40dp"
                        android:layout_weight="1"
                        android:background="@drawable/red_border_box"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/lbl_revert"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_horizontal"
                            android:text="Revert With Enquiry"
                            android:textColor="@color/teal"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/chat"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/w40dp"
                        android:layout_weight="1"
                        android:background="@color/teal"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/lbl_chat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_horizontal"
                            android:text="Chat"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/lbl_cancelled"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="50dp"
                    android:text="This Deal has been Cancelled"
                    android:textColor="@color/black"
                    android:textSize="22sp"
                    android:gravity="center"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="10dp"
                    android:background="#9c9b9c"
                    android:visibility="gone"/>

                <LinearLayout
                    android:id="@+id/btn_reopen"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/w40dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:background="@color/teal"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/lbl_reopen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_horizontal"
                        android:text="Reopen This Deal"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_pending"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/w40dp"
                    android:layout_weight="1"
                    android:background="@color/pending_color"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/lbl_pending"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_horizontal"
                        android:text="Mark This Deal As Pending"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>


    </ScrollView>

</RelativeLayout>
