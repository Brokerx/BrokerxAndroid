<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_my_history"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background_color"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.firstidea.android.brokerx.MyHistoryActivity"
    tools:showIn="@layout/activity_my_history">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Date Range"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginLeft="@dimen/left10"
            android:layout_marginTop="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="From Date"
                    android:layout_marginLeft="15dp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To Date"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="@dimen/left10"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:weightSum="2.5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/starDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/left10"
                    android:layout_weight="1.1"
                    android:background="@drawable/date_box"
                    android:onClick="setStartDate"
                    android:padding="5dp"
                    android:textColor="@color/dividerColor"
                    android:drawableLeft="@drawable/calendar1"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="Select Date"
                    android:textSize="14sp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:layout_weight="0.3"
                    android:layout_gravity="center_vertical"
                    android:background="@color/black_overlay" />

                <TextView
                    android:id="@+id/endDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/left10"
                    android:layout_weight="1.1"
                    android:background="@drawable/date_box"
                    android:onClick="setEndDate"
                    android:padding="5dp"
                    android:textColor="@color/dividerColor"
                    android:drawableLeft="@drawable/calendar1"
                    android:drawablePadding="10dp"
                    android:gravity="center_vertical"
                    android:text="Select Date"
                    android:textSize="14sp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"/>

            </LinearLayout>
            <Button
                android:text="Search"
                android:layout_width="125dp"
                android:layout_height="40dp"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="right"
                android:background="@drawable/app_btn"
                android:id="@+id/button_search"
                android:layout_weight="0.52" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/history_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:paddingBottom="5dp"
                android:background="@color/activity_background_color"

                />
        </ScrollView>
    </LinearLayout>

</RelativeLayout>
