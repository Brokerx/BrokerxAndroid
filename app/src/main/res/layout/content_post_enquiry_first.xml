<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background_color"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".AddEnquiryFirstActivity"
    tools:showIn="@layout/activity_post_enquiry_first">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layout_step_one"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/black_bordered_white_rectangle_drawable"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground">

                <TextView
                    android:id="@+id/step_one_label"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/black_bordered_white_circle_shape"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_toLeftOf="@+id/arrow_one"
                    android:layout_toRightOf="@+id/step_one_label"
                    android:gravity="center_vertical"
                    android:text="What is the item, make etc.."
                    android:textColor="@color/textColorPrimary"
                    android:textSize="14sp" />

                <View
                    android:id="@+id/arrow_one"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/ic_right_arrow" />
            </RelativeLayout>

            <View
                android:id="@+id/connector1"
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:layout_marginLeft="25dp"
                android:background="@color/black"
                android:visibility="invisible" />

            <RelativeLayout
                android:id="@+id/layout_step_two"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/black_bordered_white_rectangle_drawable"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground">

                <TextView
                    android:id="@+id/step_two_label"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/black_bordered_white_circle_shape"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_toLeftOf="@+id/arrow_two"
                    android:layout_toRightOf="@+id/step_two_label"
                    android:gravity="center_vertical"
                    android:text="Where is the product located.."
                    android:textColor="@color/textColorPrimary"
                    android:textSize="14sp" />

                <View
                    android:id="@+id/arrow_two"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/ic_right_arrow" />
            </RelativeLayout>

            <View
                android:id="@+id/connector2"
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:layout_marginLeft="25dp"
                android:background="@color/black"
                android:visibility="invisible" />

            <RelativeLayout
                android:id="@+id/layout_step_three"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/black_bordered_white_rectangle_drawable"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground">

                <TextView
                    android:id="@+id/step_three_label"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/black_bordered_white_circle_shape"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_toLeftOf="@+id/arrow_three"
                    android:layout_toRightOf="@+id/step_three_label"
                    android:gravity="center_vertical"
                    android:text="What are the charges"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="14sp" />

                <View
                    android:id="@+id/arrow_three"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/ic_right_arrow" />
            </RelativeLayout>

            <View
                android:id="@+id/connector3"
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:layout_marginLeft="25dp"
                android:background="@color/black"
                android:visibility="invisible" />

            <RelativeLayout
                android:id="@+id/layout_step_four"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/black_bordered_white_rectangle_drawable"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground">

                <TextView
                    android:id="@+id/step_four_label"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/black_bordered_white_circle_shape"
                    android:gravity="center"
                    android:text="4"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_toLeftOf="@+id/arrow_four"
                    android:layout_toRightOf="@+id/step_four_label"
                    android:gravity="center_vertical"
                    android:text="How mutch is the brokerage.."
                    android:textColor="@color/textColorPrimary"
                    android:textSize="14sp" />

                <View
                    android:id="@+id/arrow_four"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/ic_right_arrow" />
            </RelativeLayout>

            <View
                android:id="@+id/connector4"
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:layout_marginLeft="25dp"
                android:background="@color/black"
                android:visibility="invisible" />

            <RelativeLayout
                android:id="@+id/layout_step_five"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/black_bordered_white_rectangle_drawable"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground">

                <TextView
                    android:id="@+id/step_five_label"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/black_bordered_white_circle_shape"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="@color/textColorPrimary"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_toLeftOf="@+id/arrow_five"
                    android:layout_toRightOf="@+id/step_five_label"
                    android:gravity="center_vertical"
                    android:text="Others.."
                    android:textColor="@color/textColorPrimary"
                    android:textSize="14sp" />

                <View
                    android:id="@+id/arrow_five"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/ic_right_arrow" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
