<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardElevation="3dp"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="Status"
                android:textColor="@color/black"
                android:textSize="18sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:weightSum="6">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/circle_status1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_above="@+id/vertical_bar1"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/accept_circle" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_toRightOf="@+id/circle_status1"
                        android:layout_centerVertical="true"
                        android:background="@color/dividerColor"></View>
                    <View
                        android:id="@+id/vertical_bar1"
                        android:layout_width="1dp"
                        android:layout_height="25dp"
                        android:layout_above="@+id/lblb_status1"
                        android:layout_centerHorizontal="true"
                        android:background="@color/dividerColor"></View>

                    <TextView
                        android:id="@+id/lblb_status1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="2"
                        android:text="Deal Done\n"
                        android:textColor="@color/black"
                        android:textSize="10sp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_toLeftOf="@+id/circle_status2"
                        android:layout_centerVertical="true"
                        android:background="@color/dividerColor"></View>
                    <ImageView
                        android:id="@+id/circle_status2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_below="@+id/vertical_bar2"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/accept_circle" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_toRightOf="@+id/circle_status2"
                        android:layout_centerVertical="true"
                        android:background="@color/dividerColor"></View>
                    <View
                        android:id="@+id/vertical_bar2"
                        android:layout_width="1dp"
                        android:layout_height="25dp"
                        android:layout_below="@+id/lblb_status2"
                        android:layout_centerHorizontal="true"
                        android:background="@color/dividerColor"></View>
                    <TextView
                        android:id="@+id/lblb_status2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="2"
                        android:gravity="bottom"
                        android:text="Goods Lifted"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentTop="true"
                        android:textColor="@color/black"
                        android:textSize="10sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_toLeftOf="@+id/circle_status3"
                        android:layout_centerVertical="true"
                        android:background="@color/dividerColor"></View>
                    <ImageView
                        android:id="@+id/circle_status3"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_above="@+id/vertical_bar3"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/accept_circle" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_toRightOf="@+id/circle_status3"
                        android:layout_centerVertical="true"
                        android:background="@color/dividerColor"></View>
                    <View
                        android:id="@+id/vertical_bar3"
                        android:layout_width="1dp"
                        android:layout_height="25dp"
                        android:layout_above="@+id/lblb_status3"
                        android:layout_centerHorizontal="true"
                        android:background="@color/dividerColor"></View>
                    <TextView
                        android:id="@+id/lblb_status3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="2"
                        android:text="Documents\n attached"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:textColor="@color/black"
                        android:textSize="10sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_toLeftOf="@+id/circle_status4"
                        android:layout_centerVertical="true"
                        android:background="@color/dividerColor"></View>
                    <ImageView
                        android:id="@+id/circle_status4"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_below="@+id/vertical_bar4"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/accept_circle" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_toRightOf="@+id/circle_status4"
                        android:layout_centerVertical="true"
                        android:background="@color/dividerColor"></View>
                    <View
                        android:id="@+id/vertical_bar4"
                        android:layout_width="1dp"
                        android:layout_height="25dp"
                        android:layout_below="@+id/lblb_status4"
                        android:layout_centerHorizontal="true"
                        android:background="@color/dividerColor"></View>
                    <TextView
                        android:id="@+id/lblb_status4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="2"
                        android:text="Payment\nReceived"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentTop="true"
                        android:textColor="@color/black"
                        android:textSize="10sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_toLeftOf="@+id/circle_status5"
                        android:layout_centerVertical="true"
                        android:background="@color/dividerColor"></View>
                    <ImageView
                        android:id="@+id/circle_status5"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_above="@+id/vertical_bar5"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/accept_circle" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_toRightOf="@+id/circle_status5"
                        android:layout_centerVertical="true"
                        android:background="@color/dividerColor"></View>
                    <View
                        android:id="@+id/vertical_bar5"
                        android:layout_width="1dp"
                        android:layout_height="25dp"
                        android:layout_above="@+id/lblb_status5"
                        android:layout_centerHorizontal="true"
                        android:background="@color/dividerColor"></View>
                    <TextView
                        android:id="@+id/lblb_status5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="2"
                        android:text="Documents\n received"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:textColor="@color/black"
                        android:textSize="10sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_toLeftOf="@+id/circle_status6"
                        android:layout_centerVertical="true"
                        android:background="@color/dividerColor"></View>
                    <ImageView
                        android:id="@+id/circle_status6"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_below="@+id/vertical_bar6"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/accept_circle" />

                    <View
                        android:id="@+id/vertical_bar6"
                        android:layout_width="1dp"
                        android:layout_height="25dp"
                        android:layout_below="@+id/lblb_status6"
                        android:layout_centerHorizontal="true"
                        android:background="@color/dividerColor"></View>
                    <TextView
                        android:id="@+id/lblb_status6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lines="2"
                        android:gravity="bottom"
                        android:text="Deal\nCleared"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentTop="true"
                        android:textColor="@color/black"
                        android:textSize="10sp" />
                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>